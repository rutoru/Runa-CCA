{% extends "Config/config_frame.twig" %}
{% block message %}
{% autoescape true %}
<form action="/runa-cca/conf/queuemod" method="POST">
<table class="table table-striped table-hover ">
  <thead>
    <tr>
        <th>選択</th>
        <th>キューID</th>
        <th>キュー名</th>
        <th>キュー最大数</th>
    </tr>
  </thead>
  <tbody>
        {% for queue in queues %}
        <tr>
            <td><input type="radio" name="queue_id" value="{{queue.queue_id}}" required></td>
            <td>{{queue.queue_id}}</td>
            <td>{{queue.queue_name}}</td>
            <td>{{queue.max_size}}</td>
        </tr>
        {% endfor %}
  </tbody>
</table>
<button type="submit" class="btn btn-primary">表示</button>
</form>

{% endautoescape %}
{% endblock message %}