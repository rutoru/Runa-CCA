{% extends "Main/config_frame.twig" %}
{% block message %}
    {% autoescape true %}

        <div class="page-header" id="banner">
            <div class="row">
                <div class="col-lg-12">
                    <form action="/runa-cca/conf/queuemod" method="POST">
                    <h2>キュー一覧</h2>
                    <table class="table table-striped table-hover ">
                      <thead>
                        <tr>
                            <th>選択</th>
                            <th>キューID</th>
                            <th>キュー名</th>
                        </tr>
                      </thead>
                      <tbody>
                            {% for queue in queues %}
                            <tr>
                                <td><input type="radio" name="queue_id" value="{{queue.queue_id}}" required></td>
                                <td>{{queue.queue_id}}</td>
                                <td>{{queue.queue_name}}</td>
                            </tr>
                            {% endfor %}
                      </tbody>
                    </table>
                    <button type="submit" class="btn btn-primary">表示</button>
                    </form>
                </div>
            </div>
        </div>

    {% endautoescape %}
{% endblock message %}